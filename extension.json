{
	"name": "FieldPermissions",
	"version": "2.0.0",
	"author": "Daniel Aharoni",
	"url": "https://www.mediawiki.org/wiki/Extension:FieldPermissions",
	"descriptionmsg": "fieldpermissions-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "extension",
	"manifest_version": 2,

	"requires": {
		"MediaWiki": ">=1.39"
	},

	"LoadAfter": {
		"SemanticMediaWiki": "*"
	},

	"MessagesDirs": {
		"FieldPermissions": [
			"i18n"
		]
	},

	"ExtensionMessagesFiles": {
		"FieldPermissionsAlias": "i18n/FieldPermissions.alias.php"
	},

	"AutoloadNamespaces": {
		"FieldPermissions\\": "src/"
	},

	"AutoloadClasses": {
		"FieldPermissions\\Hooks": "src/Hooks.php"
	},

	"ExtensionFunctions": [
		"FieldPermissions\\Hooks::onExtensionFunction"
	],

	"Hooks": {

		"SMW::Settings::BeforeInitializationComplete":
            "FieldPermissions\\Hooks::onSMWSettingsBeforeInitializationComplete",

		"SMW::Factbox::BeforeContentGeneration":
            "FieldPermissions\\Hooks::onSMWFactboxBeforeContentGeneration",

		"BeforePageDisplay":
            "FieldPermissions\\Hooks::onBeforePageDisplay",

		"PageRenderingHash":
            "FieldPermissions\\Hooks::onPageRenderingHash",

		"LoadExtensionSchemaUpdates":
            "FieldPermissions\\Hooks::onLoadExtensionSchemaUpdates",

		"GetUserPermissionsErrors":
            "FieldPermissions\\Hooks::onGetUserPermissionsErrors",

		"MultiContentSave":
            "FieldPermissions\\Hooks::onMultiContentSave"
	},

	"ServiceWiringFiles": {
		"FieldPermissions": "src/ServiceWiring.php"
	},

	"SpecialPages": {
		"ManageVisibility": "FieldPermissions\\Special\\SpecialManageVisibility"
	},

	"AvailableRights": [
		"fp-manage-visibility"
	],

	"GroupPermissions": {
		"sysop": {
			"fp-manage-visibility": true
		}
	},

	"config": { }
}
