{
	"name": "PropertyPermissions",
	"version": "2.0.0",
	"author": "Daniel Aharoni",
	"url": "https://www.mediawiki.org/wiki/Extension:PropertyPermissions",
	"descriptionmsg": "propertypermissions-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "extension",
	"manifest_version": 2,

	"requires": {
		"MediaWiki": ">=1.39"
	},

	"LoadAfter": {
		"SemanticMediaWiki": "*"
	},

	"MessagesDirs": {
		"PropertyPermissions": [
			"i18n"
		]
	},

	"ExtensionMessagesFiles": {
		"PropertyPermissionsAlias": "i18n/PropertyPermissions.alias.php"
	},

	"AutoloadNamespaces": {
		"PropertyPermissions\\": "src/"
	},

	"AutoloadClasses": {
		"PropertyPermissions\\Hooks": "src/Hooks.php"
	},

	"ExtensionFunctions": [
		"PropertyPermissions\\Hooks::onExtensionFunction"
	],

	"Hooks": {

		"SMW::Settings::BeforeInitializationComplete":
            "PropertyPermissions\\Hooks::onSMWSettingsBeforeInitializationComplete",

		"SMW::Factbox::BeforeContentGeneration":
            "PropertyPermissions\\Hooks::onSMWFactboxBeforeContentGeneration",

		"BeforePageDisplay":
            "PropertyPermissions\\Hooks::onBeforePageDisplay",

		"PageRenderingHash":
            "PropertyPermissions\\Hooks::onPageRenderingHash",

		"LoadExtensionSchemaUpdates":
            "PropertyPermissions\\Hooks::onLoadExtensionSchemaUpdates",

		"GetUserPermissionsErrors":
            "PropertyPermissions\\Hooks::onGetUserPermissionsErrors",

		"MultiContentSave":
            "PropertyPermissions\\Hooks::onMultiContentSave",

		"ParserBeforeInternalParse":
			"PropertyPermissions\\Hooks::onParserBeforeInternalParse"
	},

	"ServiceWiringFiles": {
		"PropertyPermissions": "src/ServiceWiring.php"
	},

	"SpecialPages": {
		"ManageVisibility": "PropertyPermissions\\Special\\SpecialManageVisibility"
	},

	"AvailableRights": [
		"fp-manage-visibility"
	],

	"GroupPermissions": {
		"sysop": {
			"fp-manage-visibility": true
		}
	},

	"config": { }
}
